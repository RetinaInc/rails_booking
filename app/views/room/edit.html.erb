<div class="row-fluid">
  <div class="span8 offset2">
    <% if @room_toEdit.errors.any? %>
      <div class="alert alert-error">
        <button type="button" class="close" data-dismiss="alert">&times;</button>
        <% @room_toEdit.errors.full_messages.each do |msg| %>
            <%= msg %><br/>
        <% end %>
      </div>
    <% end %>
  </div>
</div>
<div class="row-fluid">
  <div class="span2">
    <h2>Editing Room</h2>
  </div>
  <div class="span3 offset1">
    <br/>
    <%= form_for @room_toEdit, :url => {:action => "process_edit", :id => @room_toEdit.id } do |r| %>
      <%= r.text_field :name, :placeholder => "Room Name" %>
      <%= r.text_field :capacity, :placeholder => "Room Capacity" %>
      <%= r.text_field :base_rate, :placeholder => "Base price, in GBP" %>
      <%= r.text_area :description, { :size => "10x10", :placeholder => "Room Description"} %><br/>
      Does this room have a stage? <%= r.check_box :stage %><br/>
      Does this room have a kitchen? <%= r.check_box :kitchen %>
  </div>
</div>
<div class="row-fluid">
  <div class="span2 offset3">
      <%= r.submit "Confirm", :class => "btn btn-info" %>
    <% end %>
  </div>
</div>