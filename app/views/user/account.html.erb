<h2>
  Account
  <small>
    <p>Welcome back, <%= @current_user.fullname %></p>
  </small>
</h2>

<div class="row-fluid">
  <div class="span8">
    <div class="well">
      <table>
        <tr>
          <td style="width: 150px"><strong>Username:</strong></td>       
          <td><%= @current_user.username %></td>
        </tr>

        <tr>
          <td><strong>Email Address: </strong></td>
          <td><%= @current_user.email %></td>
        </tr>

        <tr>
          <td><strong>Title:</strong></td>     
          <td><%= @current_user.title %></td>
        </tr>

        <tr>
          <td><strong>Forename:</strong></td>
          <td><%= @current_user.forename %></td>
        </tr>

        <tr>
          <td><strong>Surname:</strong></td>
          <td><%= @current_user.surname %></td>
        </tr>


        <% if @current_user.local %>
          <tr>
            <td><strong>Local:</strong></td>
            <td>&#10004;</td>
          </tr>
        <% end %>

        <% if @current_user.over_18 %>
          <tr>
            <td><strong>Over 18:</strong></td>
            <td>&#10004;</td>
          </tr>
        <% end %>

        <% if @current_user.admin %>
          <tr>
            <td><strong>Admin:</strong></td>
            <td>&#10004;</td>
          </tr>
        <% end %>

      </table>
    </div>
  </div>
</div>
<div class="row-fluid">
  <div class="span8">
    <%= link_to "Change Password", {:action => "password"}, :class => "btn btn-info" %>
    <%= link_to "Edit Account", {:action => "edit"}, :class => "btn btn-warning" %>
    <%= link_to "Delete Account", {:action => "delete"}, :class => "btn btn-danger" %>
  </div>
</div>
