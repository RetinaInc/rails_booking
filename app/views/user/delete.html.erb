<div class="row-fluid">
  <div class="span2">
    <h2><%= @title %></h2>
  </div>
  <div class="span7 offset1">
    <h2><small>You are about to delete this account, this action is irreversible. Please note that all bookings associated with this account will also be deleted.</small></h2>
  </div>
</div>
<div class="row-fluid">
  <div class="span4 offset3">
    <%= link_to "Confirm", {:action => "process_delete", :id => @user_toDelete.id }, :class => "btn btn-danger" %>
    <%= link_to "Cancel", :back, :class => "btn btn-warning" %>
  </div>
</div>