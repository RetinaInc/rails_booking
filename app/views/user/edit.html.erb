<div class="row-fluid">
  <div class="span8 offset2">
    <% if @user_toEdit.errors.any? %>
      <div class="alert alert-error">
        <button type="button" class="close" data-dismiss="alert">&times;</button>
        <% @user_toEdit.errors.full_messages.each do |msg| %>
            <%= msg %><br/>
        <% end %>
      </div>
    <% end %>
  </div>
</div>
<div class="row-fluid">
  <div class="span2">
    <h2>Editing User</h2>
  </div>
  <div class="span3 offset1">
    <br/>
    <%= form_for @user_toEdit, :url => {:action => "process_edit", :id => @user_toEdit.id} do |u| %>
      <%= u.text_field :username, :placeholder => "Desired Username" %>
      <%= u.text_field :email, :placeholder => "Email Address" %>
      <%= u.text_field :email_confirmation, :placeholder => "Confirm Email Address" %>
      <%= u.select(:title, [["Dr","Dr"],["Mr","Mr"],["Mrs","Mrs"],["Ms","Ms"],["Miss","Miss"],["Mx","Mx"]], :include_blank => "Select Title") %>
      <%= u.text_field :forename, :placeholder => "First Name" %>
      <%= u.text_field :surname, :placeholder => "Surname" %><br/>

      Are you over 18? <%= u.check_box :over_18 %><br/>

      Do you live in the local area? <%= u.check_box :local %><br/>

      <% if @current_user && @current_user.admin %>
        Will this user be an admin? <%= u.check_box :admin %>
      <% end %>
  </div>
</div>
<div class="row-fluid">
  <div class="span4 offset3">
      <%= u.submit "Confirm", :class => "btn btn-info" %>
    <% end %>
    <%= link_to "Cancel", :back, :class => "btn btn-warning" %>
  </div>
</div>
