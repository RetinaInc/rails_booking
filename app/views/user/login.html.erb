<div class="row-fluid">
  <div class="span2">
    <h3>Login</h3>
  </div>
  <div class="span3 offset1">
    <br/>
    <%= form_tag :action => "process_login" do %>
      <%= text_field "user", "username", :placeholder => "Username" %>
      <%= password_field "user", "password", :placeholder => "Password" %>
  </div>
  <div class="span3">
    <br/>
  </div>
</div>
<div class="row-fluid">
  <div class="span3 offset3">
      <%= submit_tag "Login", :class => "btn btn-primary" %>
      <%= link_to "Register", {:action => "new"}, :class => "btn btn-info", :method => "get" %><br/>
      <%= link_to "Forgot password?", :action => "reset" %>
    <% end %>
  </div>
</div>