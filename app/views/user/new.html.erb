<div class="row-fluid">
  <div class="span8 offset2">
    <% if @newUser.errors.any? %>
      <div class="alert alert-error">
        <button type="button" class="close" data-dismiss="alert">&times;</button>
        <% @newUser.errors.full_messages.each do |msg| %>
            <%= msg %><br/>
        <% end %>
      </div>
    <% end %>
  </div>
</div>
<div class="row-fluid">
  <div class="span2">
    <h2>Registering New User</h2>
  </div>
  <div class="span3 offset1">
    <br/>
    <%= form_for @newUser, :url => {:action => "process_new"} do |u| %>
      <%= u.text_field :username, :placeholder => "Desired Username" %>
      <%= u.password_field :password, :placeholder => "Desired Password" %>
      <%= u.password_field :password_confirmation, :placeholder => "Confirm Password" %>
      <%= u.email_field :email, :placeholder => "Email Address" %>
      <%= u.email_field :email_confirmation, :placeholder => "Confirm Email Address" %>
      <%= u.select(:title, [["Dr","Dr"],["Mr","Mr"],["Mrs","Mrs"],["Ms","Ms"],["Miss","Miss"],["Mx","Mx"]], :include_blank => "Select Title") %>
      <%= u.text_field :forename, :placeholder => "First Name" %>
      <%= u.text_field :surname, :placeholder => "Surname" %><br/>
      Are you over 18? <%= u.check_box :over_18 %><br/>
      Do you live in the local area? <%= u.check_box :local %><br/>
      <% if @current_user && @current_user.admin %>
        Will this user be an admin? <%= u.check_box :admin %>
      <% end %>
  </div>
</div>
<div class="row-fluid">
  <div class="span2 offset3">
      <%= u.submit "Register", :class => "btn btn-info" %>
    <% end %>
  </div>
</div>